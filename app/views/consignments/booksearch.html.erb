<div class="span-24">
  <div class="span-4 colborder">
    <div class="span-4">
      <p></p>
      <p><%= link_to "Ibtrs", ibtrs_path %> </p>
    </div>
  </div>
  <div class="span-14">
    <div class="span-14">  
      <section class="round">
        <% flash.each do |key, value| %>
          <div class="flash <%= key %>"><%= value %></div>
        <% end %>
      </section>
    </div>
    <div class="span-14">  
      <%= form_tag consignments_booksearch_path, :class=>'bookSearch', :method => 'get' do -%>
        <%= field_set_tag 'Search' do %>
          <div class="span-18">
          <%= label_tag 'Book No:'%>
          <%= text_field_tag :book_no, params[:book_no] %>
          </div>
          <div class="span-18">
            <%= submit_tag "Submit", :name => nil %>
          </div>
        <% end -%>
      <% end -%>
    </div>
  

    <div class="span-14">
      <% unless @good.nil? %>
        <div class="span-14">
          <h6>Book Details</h6>
          <br/>
          <div class="span 14">
            <div class="span-3">Book No: <%=@good.book_no%></div>
            <div class="span-3">Title id :<%=@good.book.title_id%></div>
            <div class="span-5">Title: <%=@good.book.title.title%></div>
            <div class="span-3">Belongs to: <%=@good.book.catalogued_branch_id%></div>
            <div class="span-3">Current location: <%=@good.book.branch_id%></div>
          </div>
          <hr/>
          <br/>
          <h6>Ibtr assigned to <%=@good.consignment.origin_id%></h6>
          
          <br/>
          <table>
            <thead class="span-15">
            <tr>
              <th class="span-2">Requesting Branch<br/></th>
              <th class="span-2">Title Id<br/></th>
              <th class="span-2">Status<br/></th>
              <th class="span-4">Title <br/></th>
              <th class="span-2">Fulfill<br/></th>
            </tr>
            </thead>
            <%= render :partial => "search_result", :collection => @ibtrs %>
          </table>
    
        </div>
      <% end %>
      <% if @good.nil?  %>
        <div class="span-14">
          <br/>
          no data found
        </div>  
      <% end %>
    </div>
  </div>
</div>
