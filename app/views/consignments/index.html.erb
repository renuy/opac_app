<h1>Listing consignments</h1>

<table>
  <tr>
    <th>No</th>
    <th>WayBill No</th>
    <th>Origin</th>
    <th>Consignor</th>
    <th>Destination</th>
    <th>Consignee</th>
    <th>State</th>
    <th>No of Goods</th>
		<th>Missing Goods</th>
  </tr>

<% @consignments.each do |consignment| %>
  <tr>
    <td><%= consignment.id %></td>
    <td><%= consignment.waybill_no %></td>
    <td><%= consignment.origin.name %></td>
    <td><%= consignment.consignor %></td>
    <td><%= consignment.destination.name %></td>
    <td><%= consignment.consignee %></td>
    <td><%= consignment.state %></td>
    <td><%= consignment.goods_count %></td>
    <td><%= consignment.goods_delivered_count %></td>

    <td><%= link_to 'Show', consignment %></td>
    <td><%= link_to 'Edit', edit_consignment_path(consignment) %></td>
    <td><%= link_to 'Destroy', consignment, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

